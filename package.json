{
  "name": "correct-my-essay-backend",
  "description": "O backend de uma ferramenta colaborativa que possui toda a lógica de negócio. A ferramenta é feita para conectar estudantes que desejam estudar e praticar realização de redações, também pode ser usado para correções de outros tipos de textos fora do escopo de redações, como tradução.",
  "version": "0.3.0",
  "private": true,
  "license": "MIT",
  "main": "src/main.js",
  "engines": {
    "node": "14.4.0"
  },
  "scripts": {
    "start": "npm run build && node dist/src/main.js",
    "start:live": "ts-node-dev --project src/tsconfig.json --rs src/main.ts --ignore-watch node_modules",
    "lint": "tsc -b src && eslint src/",
    "build": "tsc -b src && npm run lint && npm run copy-static-assets",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "test": "jest --detectOpenHandles",
    "test:live": "jest  --detectOpenHandles --watch",
    "test:feature": "npm run test test/feature/",
    "test:feature:live": "npm run test:live test/feature/",
    "test:unit": "npm run test test/model",
    "test:unit:live": "npm run test:live test/model"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterleiva/correct-my-essay-backend.git"
  },
  "keywords": [
    "collaborative",
    "essay"
  ],
  "dependencies": {
    "apollo-server-express": "^2.16.1",
    "bcrypt": "^5.0.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-graphql": "^0.11.0",
    "express-validator": "^6.6.1",
    "graphql": "^15.3.0",
    "json-api-serializer": "^2.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "loglevel": "^1.6.8",
    "mongoose": "^5.10.0",
    "morgan": "~1.9.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@tsconfig/recommended": "^1.0.1",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/express-validator": "^3.0.0",
    "@types/faker": "^4.1.12",
    "@types/jest": "^26.0.7",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.160",
    "@types/loglevel": "^1.6.3",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.26",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/rosie": "0.0.37",
    "@types/shelljs": "^0.8.8",
    "@types/superagent": "^4.1.8",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.5.0",
    "eslint-config-google": "^0.14.0",
    "faker": "^4.1.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "rosie": "^2.0.1",
    "shelljs": "^0.8.4",
    "superagent": "^5.3.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.9.7"
  }
}
