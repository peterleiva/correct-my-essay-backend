{
  "name": "correct-my-essay-backend",
  "description": "O backend de uma ferramenta colaborativa que possui toda a lógica de negócio. A ferramenta é feita para conectar estudantes que desejam estudar e praticar realização de redações, também pode ser usado para correções de outros tipos de textos fora do escopo de redações, como tradução.",
  "version": "0.1.1",
  "private": true,
  "license": "MIT",
  "main": "src/main.js",
  "engines": {
    "node": "14.4.0"
  },
  "scripts": {
    "start": "npm run build && node dist/main.js",
    "start:dev": "ts-node-dev --rs --ignore-watch node_modules src/main.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "build": "tsc && npm run lint && npm run copy-static-assets",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterleiva/correct-my-essay-backend.git"
  },
  "keywords": [
    "collaborative",
    "essay"
  ],
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "loglevel": "^1.6.8",
    "mongoose": "^5.9.25",
    "morgan": "~1.9.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.7",
    "@types/faker": "^4.1.12",
    "@types/jest": "^26.0.7",
    "@types/loglevel": "^1.6.3",
    "@types/mongoose": "^5.7.32",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.26",
    "@types/passport": "^1.0.4",
    "@types/passport-local": "^1.0.33",
    "@types/shelljs": "^0.8.8",
    "@types/superagent": "^4.1.8",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.5.0",
    "eslint-config-google": "^0.14.0",
    "faker": "^4.1.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "shelljs": "^0.8.4",
    "superagent": "^5.3.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.9.7"
  }
}
