{
	"extends": "@tsconfig/node12/tsconfig.json",
	"compilerOptions": {
		"strict": false,
		"sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
		"baseUrl": ".",
    "typeRoots": [
			"./node_modules/@types"
		],
		"paths": {
			"*": [
				"*",
				"node_modules/*",
				"src/types/*"
			]
		}
	}
}
