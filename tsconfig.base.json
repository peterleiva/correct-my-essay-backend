{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
		"noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
		"baseUrl": ".",
		"composite": true,
    "typeRoots": [
			"node_modules/@types"
		],
		"paths": {
			"*": [
				"*",
				"node_modules/*",
				"src/types/*"
			]
		},
	},
	"include": ["src/**/*"]
}
