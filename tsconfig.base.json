{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
		"noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
		"baseUrl": ".",
		"types": [
			"**/*.d.ts"
		],
    "typeRoots": [
			"node_modules/@types"
		],
		"paths": {
			"*": [
				"*",
				"node_modules/*",
				"src/types/*"
			]
		},
	},
	"include": [
		"src/**/*",
		"src/**/*.d.ts"
	]
}
